<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_light"
    tools:context=".HomeLoginFragment">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/logotipo_slogan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Vamos Começar"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Faça login ou crie a sua conta."
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#787571"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        android:text="Login"
        android:background="@drawable/button_login"
        android:id="@+id/btFromLogin"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:id="@+id/btFromCadastro"
        android:layout_marginTop="10dp"
        android:text="Criar Conta"
        android:textColor="@color/color_base"
        app:layout_constraintEnd_toEndOf="@+id/btFromLogin"
        app:layout_constraintStart_toStartOf="@+id/btFromLogin"
        android:background="@drawable/buttom_register"
        app:layout_constraintTop_toBottomOf="@+id/btFromLogin" />



</androidx.constraintlayout.widget.ConstraintLayout>